<%= render "shared/header"%>

<div class="common_container">
  <section class="account_title_wrapper">
    <div class="account_title">
       <h1>新規登録</h1>
    </div>
  </section>

  <%= form_with model: @user, url:  user_registration_path, class:'account_form mail_registration', method: :post, local: true do |f| %> 
    <div class="selection_form_wrapper">
      <div class="field_container">
        <label class="form_caption">ユーザーネーム</label>
        <%= f.text_field :user_name, class:"input_field",placeholder:"  例) user_1", autofocus: true %>
      </div>
      <div class="field_container">
        <label class="form_caption">お名前（全角）</label>
        <%= f.text_field :last_name, class:"input_field", id:"last_name", placeholder:"  例) 山田",autofocus: true %>
        <%= f.text_field :first_name, class:"input_field", id:"first_name", placeholder:"  例) 陸太郎",autofocus: true %>
      </div>
      <div class="field_container">
        <label class="form_caption">メールアドレス</label>
        <%= f.email_field :email, class:"input_field", placeholder:"  PC・携帯どちらでも可",autofocus: true %>
      </div>
      <div class="field_container">
        <label class="form_caption">アバター
          <div class="avatar_input_field">画像
            <%= f.file_field :avatar, class:"hidden", id:"avatar",autofocus: true %>
          </div>
        </label>
      </div>
      <%if @sns_id.present? %>
        <%= hidden_field_tag :sns_auth, true %>
      <% else %>
        <div class="selection_form_wrapper">
          <div class="field_container">
            <label class="form_caption">パスワード</label>
            <%= f.password_field :password, class:"input_field", placeholder:"  6文字以上の半角英数字" %>
          </div>  
        </div>
        <div class="field_container">
           <label class="form_caption">パスワード（確認）</label>
           <%= f.password_field :password_confirmation,  class:"input_field", placeholder:"  同じパスワードを して下さい" %>
        </div>
      <% end %>
      <div class="btn_wrapper">
        <%= f.submit "Sign Up", class: "form_btn" %>
      </div>
      <div class="sign_up_container">
        <p class="sign_up_with">Or sign in with</p>
        <div class="sign_up_btns"><%= link_to 'Google', user_google_oauth2_omniauth_authorize_path, class: 'sns_texts', method: :post %></div>
        <div class="sign_up_btns"><%= link_to 'Facebook', user_facebook_omniauth_authorize_path, class: 'sns_texts', method: :post %></div>
        <div class="sign_up_btns"><%= link_to 'Twitter', user_twitter_omniauth_authorize_path, class: 'sns_texts', method: :post %></div>
      </div>
    </div>
  <% end %> 
</div>

<section class="footer_wrapper">
  <%= render "shared/footer"%>
</section>