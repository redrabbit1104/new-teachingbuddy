<div class="header_wrapper">
  <div class="header_grid">
    <div id="school_name">
      <%= link_to image_tag("TeachingBuddy_logo.png", class:"teaching_logo"), "/" %>
    </div>
    <div class="header_nav">
      <div class="head_nav">
        <%= link_to 'トップページ', "/" %>
      </div>
      <div class="head_nav">
        <%= link_to '授業一覧', confirmedschedules_path %>
      </div>
      <% unless user_signed_in? || admin_signed_in? %>
      <div class="head_nav">
        <%= link_to 'ユーザー登録', registrations_users_path %>
      </div>
      <% end %>
      <% if admin_signed_in? %>
      <div class="head_nav">
      <%= link_to '新規授業登録', new_schedule_path %>
      </div>
      <div class="head_nav">
      <%= link_to '授業承認' , schedules_path, method: :get %>
      </div>
      <% end %>
      <% if user_signed_in? %>
      <div class="head_nav">
        <%= link_to 'エントリー' , schedules_path%>
      </div>
      <div class="head_nav">
        <%= link_to 'Sign Out' , destroy_user_session_path, method: :delete %>
      </div>
      <% end %>
    </div>
  </div>
</div>