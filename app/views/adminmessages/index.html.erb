<section class="title_wrapper">  
  <div class="chat_title">
    <h1>チャットルーム</h1>
  </div>
</section>

<section class="room_wrapper">
  <div class="message_wrapper"> 
      <%= render partial: 'message', collection: @messages %>
  </div> 

  <div class="chat_form_wrapper">
    <%= form_with url:adminroom_adminmessages_path, local: true do |f| %>
      <label class="chat_form_image_button">
          <span>&#9834;</span>
          <%= f.file_field :image, class: 'hidden' %>
      </label>
        <%= f.text_field :content, class: 'type_message', placeholder: 'Type a Message' %>
    
      <%= f.submit '送信', class: 'chat_form_button' %>
    <% end %>
  </div>
</section>